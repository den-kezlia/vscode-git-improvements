{
	"name": "git-improvements",
	"displayName": "gitImprovements",
	"description": "",
	"version": "0.0.1",
	"publisher": "den-kezlia",
	"engines": {
		"vscode": "^1.47.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/den-kezlia/vscode-git-improvements"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:gitImprovements.setCommitMessage",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gitImprovements.setCommitMessage",
				"title": "Prefill commit message",
				"icon": {
					"dark": "images/add-dark.svg",
					"light": "images/add-light.svg"
				}
			}
		],
		"menus": {
			"scm/title": [{
				"command": "gitImprovements.setCommitMessage",
				"group": "navigation"
			}]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
